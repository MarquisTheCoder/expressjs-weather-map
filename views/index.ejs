<head>
	
	<title>Weather.io</title>
	
	<meta charset="UTF-8">
	<meta name="viewport" content="initial-scale=1, width=device-width, maximum-scale=1,user-scalable=no">
	
	<!-- jquery import -->
	<script src="https://code.jquery.com/jquery-3.6.1.min.js"
	        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
	        crossorigin="anonymous"></script>
	
	<!-- bootstrap css cdn -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
	      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
	      crossorigin="anonymous">
	
	<!-- bootstrap js cdn -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
	        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
	        crossorigin="anonymous"></script>
	
	<!-- mapbox api javascript -->
	<script src='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js'></script>
	
	<!-- mapbox api css -->
	<link href='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css' rel='stylesheet' />
	<link rel="icon" type="image/x-icon" href="img/cloud.ico">
	<!-- custom weather map css -->
	<link rel="stylesheet" href="css/weather_map.css">
	<!-- storage for api keys -->
	<script src="js/keys.js"></script>
	<!-- custom weather map js -->
	<script src="js/weather_map.js"></script>

</head>

<body class="text-white">
<header>
	
	<!--creating the blue nav bar in the example-->
	<nav>
		<!-- aligning the content along the y axis and spacing them across the webpage -->
		<ul class="d-flex w-100 h-100 justify-content-between align-items-center text-white">
			<li>
				<!-- styling the webpage to give the logo a background -->
				<div id="logo" class="p-3 rounded-pill">
					<img id="main-icon"
					     class="mx-3"
					     src="https://cdn3d.iconscout.com/3d/premium/thumb/dark-cloud-day-4720533-3927902.png"
					     alt="">
					Weather.io
				</div>
			</li>
			
			<li>
				<h4 id="current-city" class=" text-center justify-content-center"></h4>
			</li>
			
			<li>
				<!-- adding a search bar feature for a specific location -->
				<section id="search-bar-container" class="container w-100">
					<div class="d-flex w-75 gap-3 align-items-center">
						<input type="text" id="search-location" name="search-location" class="input">
						<button id="search-location-btn"><img id="search-icon" src="img/search-icon.png"/></button>
					</div>
					<!--							git push test-->
				</section>
			</li>
		</ul>
	</nav>

</header>

<!-- breaking down each item on the page into sections -->
<main class="container-fluid w-100">
	
	<section class="weather-info-mask mx-2">
		<div id="weather-info-container" class="d-flex-column bg-dark">
			<div class="card-holder"></div>
		</div>
	</section>
	
	<section id="map-container"></section>
</main>


</body>
